create table resume
(
    uuid      char(36) not null
        constraint resume_pk
            primary key,
    full_name text     not null
);

alter table resume
    owner to postgres;

create unique index resume_uuid_uindex
    on resume (uuid);

create table contact
(
    id          serial,
    resume_uuid char(36) not null
        constraint "contact_resume _uuid_fk"
            references resume
            on delete cascade,
    type        text     not null,
    value       text

);

alter table contact
    owner to postgres;

create unique index contact_resume_uuid_index
    on contact (resume_uuid, type);